    <div class="container">
        <h1>New user Registration Form</h1>
        <form action="/createUserForm" method="post">
            <table border="1" align="center">
                <tr>
                    <td>
                        <label>Enter First Name</label>
                    </td>
                    <td>
                        <input type="text" required name="first_name" placeholder="Enter Your first Name">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Enter Last Name</label>
                    </td>
                    <td>
                        <input type="text" required name="last_name" placeholder="Enter your last name">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Address</label>
                    </td>
                    <td>
                        
                        <input type="text" required name="address" placeholder="Enter your Address">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Enter Email</label>
                    </td>
                    <td>
                        <input type="email" required name="email" name="email" placeholder="Enter your Email">
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Enter Current Balance</label>
                    </td>
                    <td>
                        <input type="number" required name="balance" placeholder="Enter your Current Balance ">
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><input type="submit" name="save" value="submit">
                    
                    </td>
                </tr>
            </table>
        </form>
    </div>
    

    <input type="text" name="" id="error" value="<%=error%>" hidden>

