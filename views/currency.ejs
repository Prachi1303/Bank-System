<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Converter</title>
    <link rel="stylesheet" href="/assets/css/currency.css" />
  
</head>
<body>

    <div class="left">
        <!-- <img src="/assets/images/bg/project_img.png" alt=""> -->
        <a href="/"><div id="left_text">Banker</div></a>
    </div>
    <div id="converter">
        <h2>Currency Converter</h2>
        <input type="number" id="amount" placeholder="Amount">
        <select id="fromCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="INR">INR</option> <!-- Add Indian Rupee -->
            <!-- Add more currencies as needed -->
        </select>
        <span>to</span>
        <select id="toCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="INR">INR</option> <!-- Add Indian Rupee -->
            <!-- Add more currencies as needed -->
        </select>
        <button onclick="convert()">Convert</button>
        <p id="result"></p>
    </div>

    <script>
        function convert() {
            const amount = document.getElementById("amount").value;
            const fromCurrency = document.getElementById("fromCurrency").value;
            const toCurrency = document.getElementById("toCurrency").value;

            // Replace this with an actual API call to get real-time exchange rates
            const conversionRates = {
                USD: 1.2,
                EUR: 1.1,
                INR: 89.5 // Replace with actual exchange rate
            };

            const conversionRate = conversionRates[toCurrency] / conversionRates[fromCurrency];

            const result = amount * conversionRate;

            document.getElementById("result").innerText = `${amount} ${fromCurrency} is equal to ${result.toFixed(2)} ${toCurrency}`;
        }
    </script>

</body>
</html>
